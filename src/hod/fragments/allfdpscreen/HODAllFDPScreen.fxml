                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="20.0"/>
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
