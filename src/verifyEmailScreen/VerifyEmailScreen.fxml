<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="148.0" prefWidth="351.0" spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="verifyEmailScreen.VerifyEmailController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <Label text="Email Verification">
      <font>
         <Font name="DejaVu Sans Bold" size="18.0" />
      </font>
   </Label>

    <Label text="Please enter your username below: " wrapText="true" />

    <TextField fx:id="usernameTF" text="Example: john_doe" />

    <HBox spacing="10">
        <Label fx:id="mailSentSuccessfullyLabel" text="Verification code sent successfully." visible="false" />

        <Button fx:id="sendresendButton" text="Send Code" onAction="#sendCode"/>
    </HBox>


    <Label fx:id="emailInformationLabel" managed="false" visible="false" wrapText="true"/>

    <TextField fx:id="verificationCodeTF" managed="false" visible="false" />

    <HBox fx:id="submitButtonHBox" alignment="TOP_RIGHT" managed="false" visible="false">
        <Button fx:id="submitCode" alignment="TOP_RIGHT" contentDisplay="CENTER" onAction="#validateCode" text="Submit" />
    </HBox>

</VBox>
